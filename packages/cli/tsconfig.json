{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "sourceMap": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "rootDirs": [
      "./src"
    ],
    "paths": {
      "*": ["./*"],
      "commands/*": ["./src/commands/*"],
      "controllers/*": ["./src/controllers/*"],
      "src/*": ["./src/*"],
    },
    "baseUrl": ".",
    "strict": true,
    "target": "es2017",
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}