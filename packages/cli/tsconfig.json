{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "sourceMap": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "rootDirs": [
      "./src"
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["./*"]
    },
    "strict": true,
    "target": "es2017",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
