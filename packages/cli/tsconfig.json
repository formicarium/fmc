{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "declaration": true,
    "composite": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "sourceMap": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "rootDirs": [
      "./src",
    ],
    "strict": true,
    "target": "es2017",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "references": [
    { "path": "../common" }
  ],
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
