
{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "noUnusedLocals": true,
    "lib": [
      "es2015",
      "es2017",
      "dom",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "errorsAsWarnings": true,
    "useCache": true,
    "forceIsolatedModules": true,
    "reportFiles": [
      "src/**/*.{ts,tsx}"
    ]
  }
}