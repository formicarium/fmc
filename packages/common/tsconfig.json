{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "module": "commonjs",
    "declarationMap": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "composite": true,
    "skipLibCheck": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es2015",
      "es2017",
      "dom",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
