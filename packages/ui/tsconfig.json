{
  "compilerOptions": {
    "baseUrl": "../packages",
    "rootDirs": [
      "src"
    ],
    "paths": {
      "@formicarium/common": ["common/src"]
    },
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "noUnusedLocals": true,
    "lib": [
      "es2015",
      "es2017",
      "dom",
      "esnext.asynciterable"
    ]
  }
}