{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "lib": [
      "es2015",
      "es2017",
      "dom",
      "esnext.asynciterable"
    ],
    "paths": {
      "~*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "cache",
    "build",
    "build-electron",
    "electron"
  ],
  "awesomeTypescriptLoaderOptions": {
    "errorsAsWarnings": true,
    "useCache": true,
    "forceIsolatedModules": true,
    "reportFiles": [
      "src/**/*.{ts,tsx}"
    ]
  }
}