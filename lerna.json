{
  "lerna": "3.2.1",
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish packages [skip ci]",
      "ignoreChanges": [
        "*.md",
        "*.test.js",
        "__tests__/*"
      ]
    }
  },
  "npmClient": "yarn",
  "useWorkspaces": true
}
